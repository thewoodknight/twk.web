---
layout: null
permalink: /feed2/
---
<feed xmlns="http://www.w3.org/2005/Atom">

  <title>{{ site.title | xml_escape }}</title>
  <subtitle>{{ site.description | xml_escape }}</subtitle>
  <id>https://www.thewoodknight.com/feed/index.xml</id>
  <link href="https://www.thewoodknight.com/feed/index.xml" rel="self" type="application/atom+xml"/>
  <link href="https://www.thewoodknight.com/" rel="alternate" type="text/html"/>
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <generator>Jekyll v{{ jekyll.version }}</generator>
  <author>
    <name>Paul Jenkins</name>
  </author>

  {% for post in site.posts limit:10 %}
    <entry>
      <title type="html">{{ post.title | xml_escape }}</title>
      <link href="{{ post.url | prepend: site.baseurl | prepend: site.url }}" rel="alternate" type="text/html" title="{{ post.title | xml_escape }}" />
      <published>{{ post.date | date_to_xmlschema  }}</published>
      <updated>{{ post.date | date_to_xmlschema }}</updated>
      <id>{{ post.url | prepend: site.baseurl | prepend: site.url }}</id>
      <content:encoded type="html" xml:base="{{ post.url | prepend: site.baseurl | prepend: site.url }}">
        {% capture topcontent %} <img class="featured-image img-fluid rounded" src="{{ site.baseurl }}/{{ post.featured_image }}" alt="{{ post.title }}" /> {% if post.video %} <a href="https://www.youtube.com/v/{{ post.video }}">Video</a></br /> {% endif %} {% endcapture %}
        <![CDATA[{{ topcontent | xml_escape }} {{ post.content | xml_escape }}]]>
      </content:encoded>
      <author>
        <name>Paul</name>
      </author>
      
      {% for tag in post.tags %}
        <category term="{{ tag | xml_escape }}" />
      {% endfor %}
      {% for cat in post.categories %}
        <category term="{{ cat | xml_escape }}" />
      {% endfor %}
    </entry>
  {% endfor %}
</feed>
